            </td>
            <td class="column1">
                @Resources.AbogadoResources.Estado
            </td>
            <td class="column1">
                @Resources.AbogadoResources.Municipio
            </td>
            <td class="column1">
                @Resources.AbogadoResources.Colonia
            </td>
            <td class="column1">
                @Resources.AbogadoResources.Codigo_Postal
            </td>
            <td class="column1">
                @Resources.AbogadoResources.Telefono
            </td>
            <td class="column1">
                @Resources.AbogadoResources.Celular
            </td>
            <td class="column1">
                @Resources.AbogadoResources.Correo_Eelectronico
            </td>

        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {                
                <tr>
                    <td>
                        @item.Clave
                    </td>
					                    <td>
                        @item.Clave
