@model IList<Spartane.Web.Areas.Frontal.Models.Audiencia_InicialGridModel>

@{
    var rowCounter = 0;
}

<style>
    .table {
        width: 100%;
        border: 1px solid #cccccc;
        font-family: "open sans","Helvetica Neue",Helvetica,Arial,sans-serif;
        /*border-collapse: separate !important;*/
        font-size: 13px;
    }

        .table td {
            padding: 2px;
            border:1px solid #cccccc;
        }

    .table tr:nth-of-type(2n+1) {
        background-color: #f9f9f9;
    }

        .table tr:nth-of-type(2n) {
            background-color: #8da0c2;
        }

    .table-row-1 td, .table-row-1 th {
    }

    .table-row-2 td, .table-row-2 th, thead {
    }

    .tableHeaderRow {
        font-weight: bold;
        border: 1px solid #ff6a00;
    }

    .column1 {
        width: 15%;
    }

    .column2 {
        width: 15%;
    }
</style>
<br />
<body onbeforeprint="ocultarcolumnas();">
 <span id="columnsVisible"></span>
<table class="table" cellspacing="0" cellpadding="0" border="0">
    <thead>
        <tr>
            <td class="column1">
                @Resources.Audiencia_InicialResources.Clave
            </td>
                        <td class="column1">
                @Resources.Audiencia_InicialResources.Clave
            </td>
            <td class="column1">
                @Resources.Audiencia_InicialResources.Expediente_MP
            </td>
            <td class="column1">
                @Resources.Audiencia_InicialResources.Fecha_de_Registro
            </td>
            <td class="column1">
                @Resources.Audiencia_InicialResources.Hora_de_Registro
            </td>
            <td class="column1">
                @Resources.Audiencia_InicialResources.Usuario_que_Registra
            </td>
            <td class="column1">
                @Resources.Audiencia_InicialResources.Nombre_del_Juez_de_Control
            </td>
            <td class="column1">
                @Resources.Audiencia_InicialResources.Tipo
            </td>
            <td class="column1">
                @Resources.Audiencia_InicialResources.causa_penal
            </td>
            <td class="column1">
                @Resources.Audiencia_InicialResources.Fecha_Audiencia_Inicial
            </td>
            <td class="column1">
                @Resources.Audiencia_InicialResources.Hora_Audiencia_Inicial
            </td>
            <td class="column1">
                @Resources.Audiencia_InicialResources.Sala_de_Audiencia
            </td>
            <td class="column1">
                @Resources.Audiencia_InicialResources.Con_Detenido
            </td>
            <td class="column1">
                @Resources.Audiencia_InicialResources.Especificar_Detencion
            </td>
            <td class="column1">
                @Resources.Audiencia_InicialResources.Control_de_Detencion
            </td>
            <td class="column1">
                @Resources.Audiencia_InicialResources.Especificar_Control_Detencion
            </td>
            <td class="column1">
                @Resources.Audiencia_InicialResources.Formulacion_de_Imputacion
            </td>

        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {                
                <tr>
                    <td>
                        @item.Clave
                    </td>
					                    <td>
                        @item.Clave
                    </td>
                    <td>
                        @item.Expediente_MP
                    </td>
                    <td>
                        @item.Fecha_de_Registro
                    </td>
                    <td>
                        @item.Hora_de_Registro
                    </td>
                    <td>
                        @item.Usuario_que_Registra
                    </td>
                    <td>
                        @item.Nombre_del_Juez_de_Control
                    </td>
                    <td>
                        @item.TipoDescripcion
                    </td>
                    <td>
                        @item.causa_penal
                    </td>
                    <td>
                        @item.Fecha_Audiencia_Inicial
                    </td>
                    <td>
                        @item.Hora_Audiencia_Inicial
                    </td>
                    <td>
                        @item.Sala_de_Audiencia
                    </td>
                    <td>
                        @item.Con_DetenidoDescripcion
                    </td>
                    <td>
                        @item.Especificar_DetencionDescripcion
                    </td>
                    <td>
                        @item.Control_de_DetencionDescripcion
                    </td>
                    <td>
                        @item.Especificar_Control_DetencionDescripcion
                    </td>
                    <td>
                        @item.Formulacion_de_ImputacionDescripcion
                    </td>

                </tr>
                rowCounter++;
            }
        }
    </tbody>
</table>
</body>

<script>
    function ocultarcolumnas() {        
        var arr = document.getElementById('columnsVisible').text.split(',');
        for (var i = 0; i < arr.length; i++) {
            if (arr[i] == "false") {
                show_hide_column(i-1, false);
            }
        }    
    };

    function show_hide_column(col_no, do_show) {
        var rows = document.getElementsByClassName('table')[0].rows;
        for (var row = 0; row < rows.length; row++) {
            var cols = rows[row].cells;
            if (col_no >= 0 && col_no < cols.length) {
                console.log(col_no);
                cols[col_no].style.display = do_show ? '' : 'none';
            }
        }
    }
</script>

