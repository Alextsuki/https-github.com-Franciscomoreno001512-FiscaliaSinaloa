<script>
    function InitiateAdvanceSearch() {
        var advanceSearch = {}, hasParameter = false;
        if ($("#txtAdvanceFromFolio").val() != "" || $("#txtAdvanceToFolio").val() != "") {
            hasParameter = true;
            advanceSearch.Configuracion_de_PlaneacionFolioFrom = $("#txtAdvanceFromFolio").val();
            advanceSearch.Configuracion_de_PlaneacionFolioTo = $("#txtAdvanceToFolio").val();
        }
        advanceSearch.CategoriaSearchType = 0;
        if ($('#ddlAdvanceCategoria').val().length > 0 || $("#txtAdvanceCategoria").val() == "") {


            if (isConfiguracion_de_PlaneacionTextSearch) {
                advanceSearch.CategoriaName = $("#txtAdvanceCategoria").val();
                advanceSearch.CategoriaNameSearchType = $("#ddlAdvanceCategoria").val();
                advanceSearch.CategoriaSearchType = 1;
            }
            else {

                advanceSearch.CategoriaToSearch = $("#ddlAdvanceCategoria").val();
                advanceSearch.CategoriaSearchType = 2;
            }
        }
        advanceSearch.ServicioSearchType = 0;
        if ($('#ddlAdvanceServicio').val().length > 0 || $("#txtAdvanceServicio").val() == "") {


            if (isConfiguracion_de_PlaneacionTextSearch) {
                advanceSearch.ServicioName = $("#txtAdvanceServicio").val();
                advanceSearch.ServicioNameSearchType = $("#ddlAdvanceServicio").val();
                advanceSearch.ServicioSearchType = 1;
            }
            else {

                advanceSearch.ServicioToSearch = $("#ddlAdvanceServicio").val();
                advanceSearch.ServicioSearchType = 2;
            }
        }
        if ($("#txtAdvanceEntregable").val() != "") {
            hasParameter = true;
            advanceSearch.Configuracion_de_PlaneacionEntregable = $("#txtAdvanceEntregable").val();
            advanceSearch.Configuracion_de_PlaneacionEntregableSearchType = $("#ddlAdvanceEntregableFilter").val();
        }
        if ($("#txtAdvanceFromTiempo_Estandar").val() != "" || $("#txtAdvanceToTiempo_Estandar").val() != "") {
            hasParameter = true;
            advanceSearch.Configuracion_de_PlaneacionTiempo_EstandarFrom = $("#txtAdvanceFromTiempo_Estandar").val();
            advanceSearch.Configuracion_de_PlaneacionTiempo_EstandarTo = $("#txtAdvanceToTiempo_Estandar").val();
        }
        if ($("#txtAdvanceFromPonderacion").val() != "" || $("#txtAdvanceToPonderacion").val() != "") {
            hasParameter = true;
            advanceSearch.Configuracion_de_PlaneacionPonderacionFrom = $("#txtAdvanceFromPonderacion").val();
            advanceSearch.Configuracion_de_PlaneacionPonderacionTo = $("#txtAdvanceToPonderacion").val();
        }

        advanceSearchQuery = hasParameter ? JSON.stringify(advanceSearch) : "";
        $('#tblConfiguracion_de_Planeacion').DataTable().draw();
        return false;
    }

    var advanceSearchQuery = "", isConfiguracion_de_PlaneacionTextSearch = true;

    $(document).ready(function () {
        $('.clock').clockpicker();
		$('.date').datepicker({
			todayBtn: "linked",
			keyboardNavigation: false,
			forceParse: false,
			calendarWeeks: true,
			autoclose: true,
			format: "@ConfigurationProperty.DateFormatDatePicker"
		});
