            isConfiguracion_de_PlaneacionTextSearch = true;
            $("#ddlAdvanceCategoria").val('').trigger("chosen:updated");
        });

        $("#ddlAdvanceCategoria").change(function () {
            isConfiguracion_de_PlaneacionTextSearch = false;
            $("#txtAdvanceCategoria").val('');
        });
        $("#txtAdvanceServicio").keypress(function () {
            isConfiguracion_de_PlaneacionTextSearch = true;
            $("#ddlAdvanceServicio").val('').trigger("chosen:updated");
        });

        $("#ddlAdvanceServicio").change(function () {
            isConfiguracion_de_PlaneacionTextSearch = false;
            $("#txtAdvanceServicio").val('');
        });

    });
</script>


