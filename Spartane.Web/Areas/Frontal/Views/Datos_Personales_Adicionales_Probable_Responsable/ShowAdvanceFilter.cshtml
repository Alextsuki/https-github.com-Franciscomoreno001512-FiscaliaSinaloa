<script>
    function InitiateAdvanceSearch() {
        var advanceSearch = {}, hasParameter = false;
        if ($("#txtAdvanceFromClave").val() != "" || $("#txtAdvanceToClave").val() != "") {
            hasParameter = true;
            advanceSearch.Datos_Personales_Adicionales_Probable_ResponsableClaveFrom = $("#txtAdvanceFromClave").val();
            advanceSearch.Datos_Personales_Adicionales_Probable_ResponsableClaveTo = $("#txtAdvanceToClave").val();
        }
        if ($("#txtAdvanceCorreo_Electronico").val() != "") {
            hasParameter = true;
            advanceSearch.Datos_Personales_Adicionales_Probable_ResponsableCorreo_Electronico = $("#txtAdvanceCorreo_Electronico").val();
            advanceSearch.Datos_Personales_Adicionales_Probable_ResponsableCorreo_ElectronicoSearchType = $("#ddlAdvanceCorreo_ElectronicoFilter").val();
        }
        if ($("#txtAdvanceNumero_Telefonico").val() != "") {
            hasParameter = true;
            advanceSearch.Datos_Personales_Adicionales_Probable_ResponsableNumero_Telefonico = $("#txtAdvanceNumero_Telefonico").val();
            advanceSearch.Datos_Personales_Adicionales_Probable_ResponsableNumero_TelefonicoSearchType = $("#ddlAdvanceNumero_TelefonicoFilter").val();
        }
        advanceSearch.Redes_SocialesSearchType = 0;
        if ($('#ddlAdvanceRedes_Sociales').val().length > 0 || $("#txtAdvanceRedes_Sociales").val() == "") {


            if (isDatos_Personales_Adicionales_Probable_ResponsableTextSearch) {
                advanceSearch.Redes_SocialesName = $("#txtAdvanceRedes_Sociales").val();
                advanceSearch.Redes_SocialesNameSearchType = $("#ddlAdvanceRedes_Sociales").val();
                advanceSearch.Redes_SocialesSearchType = 1;
            }
            else {

                advanceSearch.Redes_SocialesToSearch = $("#ddlAdvanceRedes_Sociales").val();
                advanceSearch.Redes_SocialesSearchType = 2;
            }
        }
        if ($("#txtAdvanceObservaciones").val() != "") {
            hasParameter = true;
            advanceSearch.Datos_Personales_Adicionales_Probable_ResponsableObservaciones = $("#txtAdvanceObservaciones").val();
            advanceSearch.Datos_Personales_Adicionales_Probable_ResponsableObservacionesSearchType = $("#ddlAdvanceObservacionesFilter").val();
        }

        advanceSearchQuery = hasParameter ? JSON.stringify(advanceSearch) : "";
        $('#tblDatos_Personales_Adicionales_Probable_Responsable').DataTable().draw();
        return false;
    }

    var advanceSearchQuery = "", isDatos_Personales_Adicionales_Probable_ResponsableTextSearch = true;

    $(document).ready(function () {
        $('.clock').clockpicker();
		$('.date').datepicker({
			todayBtn: "linked",
			keyboardNavigation: false,
			forceParse: false,
			calendarWeeks: true,
			autoclose: true,
			format: "@ConfigurationProperty.DateFormatDatePicker"
		});
        $("#txtAdvanceRedes_Sociales").keypress(function () {
            isDatos_Personales_Adicionales_Probable_ResponsableTextSearch = true;
            $("#ddlAdvanceRedes_Sociales").val('').trigger("chosen:updated");
        });

        $("#ddlAdvanceRedes_Sociales").change(function () {
            isDatos_Personales_Adicionales_Probable_ResponsableTextSearch = false;
            $("#txtAdvanceRedes_Sociales").val('');
        });

    });
</script>


