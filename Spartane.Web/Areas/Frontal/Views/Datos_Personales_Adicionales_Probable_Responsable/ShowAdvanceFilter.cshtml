@using System.Collections.Generic
@using Spartane.Web.Areas.Frontal.Models
@using Spartane.Web.Helpers
@model Spartane.Web.Areas.Frontal.Models.Datos_Personales_Adicionales_Probable_ResponsableAdvanceSearchModel
@{
