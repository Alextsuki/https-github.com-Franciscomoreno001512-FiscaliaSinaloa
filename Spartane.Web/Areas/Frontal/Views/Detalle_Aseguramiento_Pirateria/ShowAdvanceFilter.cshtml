            advanceSearch.Detalle_Aseguramiento_PirateriaCantidadFrom = $("#txtAdvanceFromCantidad").val();
            advanceSearch.Detalle_Aseguramiento_PirateriaCantidadTo = $("#txtAdvanceToCantidad").val();
