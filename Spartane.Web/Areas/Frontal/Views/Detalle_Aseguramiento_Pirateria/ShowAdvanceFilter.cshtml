            isDetalle_Aseguramiento_PirateriaTextSearch = false;
            $("#txtAdvanceTipo").val('');
        });
        $("#txtAdvanceUnidad_de_Medicion").keypress(function () {
            isDetalle_Aseguramiento_PirateriaTextSearch = true;
            $("#ddlAdvanceUnidad_de_Medicion").val('').trigger("chosen:updated");
        });

        $("#ddlAdvanceUnidad_de_Medicion").change(function () {
            isDetalle_Aseguramiento_PirateriaTextSearch = false;
            $("#txtAdvanceUnidad_de_Medicion").val('');
        });

    });
</script>


