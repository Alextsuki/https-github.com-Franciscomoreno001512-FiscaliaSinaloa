        var advanceSearch = {}, hasParameter = false;
        if ($("#txtAdvanceFromFolio").val() != "" || $("#txtAdvanceToFolio").val() != "") {
            hasParameter = true;
            advanceSearch.Detalle_Historial_Control_de_DocumentosFolioFrom = $("#txtAdvanceFromFolio").val();
            advanceSearch.Detalle_Historial_Control_de_DocumentosFolioTo = $("#txtAdvanceToFolio").val();
        }
        if ($("#txtAdvanceFromFecha").val() != "" || $("#txtAdvanceToFecha").val() != "") {
            hasParameter = true;
            advanceSearch.Detalle_Historial_Control_de_DocumentosFechaFrom = $("#txtAdvanceFromFecha").val();
            advanceSearch.Detalle_Historial_Control_de_DocumentosFechaTo = $("#txtAdvanceToFecha").val();
        }
        if ($("#txtAdvanceHora").val() != "") {
            hasParameter = true;
            advanceSearch.Detalle_Historial_Control_de_DocumentosHora = $("#txtAdvanceHora").val();
            advanceSearch.Detalle_Historial_Control_de_DocumentosHoraSearchType = $("#ddlAdvanceHoraFilter").val();
        }
        advanceSearch.UsuarioSearchType = 0;
        if ($('#ddlAdvanceUsuario').val().length > 0 || $("#txtAdvanceUsuario").val() == "") {


            if (isDetalle_Historial_Control_de_DocumentosTextSearch) {
                advanceSearch.UsuarioName = $("#txtAdvanceUsuario").val();
                advanceSearch.UsuarioNameSearchType = $("#ddlAdvanceUsuario").val();
                advanceSearch.UsuarioSearchType = 1;
            }
            else {

                advanceSearch.UsuarioToSearch = $("#ddlAdvanceUsuario").val();
                advanceSearch.UsuarioSearchType = 2;
            }
        }
        if ($("#txtAdvanceModificaciones_Realizadas").val() != "") {
            hasParameter = true;
            advanceSearch.Detalle_Historial_Control_de_DocumentosModificaciones_Realizadas = $("#txtAdvanceModificaciones_Realizadas").val();
            advanceSearch.Detalle_Historial_Control_de_DocumentosModificaciones_RealizadasSearchType = $("#ddlAdvanceModificaciones_RealizadasFilter").val();
        }
        if ($("#txtAdvanceCuerpo_del_Documento").val() != "") {
            hasParameter = true;
            advanceSearch.Detalle_Historial_Control_de_DocumentosCuerpo_del_Documento = $("#txtAdvanceCuerpo_del_Documento").val();
            advanceSearch.Detalle_Historial_Control_de_DocumentosCuerpo_del_DocumentoSearchType = $("#ddlAdvanceCuerpo_del_DocumentoFilter").val();
        }

        advanceSearchQuery = hasParameter ? JSON.stringify(advanceSearch) : "";
        $('#tblDetalle_Historial_Control_de_Documentos').DataTable().draw();
        return false;
    }

    var advanceSearchQuery = "", isDetalle_Historial_Control_de_DocumentosTextSearch = true;

    $(document).ready(function () {
        $('.clock').clockpicker();
		$('.date').datepicker({
			todayBtn: "linked",
			keyboardNavigation: false,
			forceParse: false,
			calendarWeeks: true,
			autoclose: true,
			format: "@ConfigurationProperty.DateFormatDatePicker"
		});
        $("#txtAdvanceUsuario").keypress(function () {
            isDetalle_Historial_Control_de_DocumentosTextSearch = true;
            $("#ddlAdvanceUsuario").val('').trigger("chosen:updated");
        });

        $("#ddlAdvanceUsuario").change(function () {
            isDetalle_Historial_Control_de_DocumentosTextSearch = false;
            $("#txtAdvanceUsuario").val('');
        });

    });
</script>


