            advanceSearch.Detalle_de_IndiciosDescripcion_de_IndicioSearchType = $("#ddlAdvanceDescripcion_de_IndicioFilter").val();
        }
        if ($("#txtAdvanceMotivo_de_Indicio").val() != "") {
