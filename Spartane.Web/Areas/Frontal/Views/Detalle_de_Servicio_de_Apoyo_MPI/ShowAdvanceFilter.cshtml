            $("#ddlAdvanceVictima").val('').trigger("chosen:updated");
        });

        $("#ddlAdvanceVictima").change(function () {
            isDetalle_de_Servicio_de_Apoyo_MPITextSearch = false;
            $("#txtAdvanceVictima").val('');
        });

    });
</script>


