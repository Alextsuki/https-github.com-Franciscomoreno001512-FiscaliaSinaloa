            }
        }
        if ($("#txtAdvanceDictamen").val() != "") {
            hasParameter = true;
            advanceSearch.Detalle_de_Servicio_de_Apoyo_MPIDictamen = $("#txtAdvanceDictamen").val();
            advanceSearch.Detalle_de_Servicio_de_Apoyo_MPIDictamenSearchType = $("#ddlAdvanceDictamenFilter").val();
        }
