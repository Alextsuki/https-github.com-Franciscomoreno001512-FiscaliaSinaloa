		 var arr = []; 
		 $("form#CreateDetalle_de_Solicitud_Datos_de_Apoyo").find(':input').each(function( index ) {		 
			if ($(this).prop('disabled')==true|| $(this).prop('disabled')=="disabled")
			{		
