                advanceSearch.CorporacionSearchType = 2;
            }
        }
        if ($("#ddlAdvanceSuspension_Condicional").val() != "") {
            hasParameter = true;
            advanceSearch.Lugar_de_DetencionSuspension_Condicional = $("#ddlAdvanceSuspension_Condicional").val();
        }
