            <td class="column1">
                @Resources.Registro_de_Huellas_DactilaresResources.Derecha_Menique
            </td>
            <td class="column1">
                @Resources.Registro_de_Huellas_DactilaresResources.Derecha_Anular
            </td>
            <td class="column1">
                @Resources.Registro_de_Huellas_DactilaresResources.Derecha_Medio
            </td>
            <td class="column1">
                @Resources.Registro_de_Huellas_DactilaresResources.Derecha_Indice
            </td>
            <td class="column1">
                @Resources.Registro_de_Huellas_DactilaresResources.Derecha_Pulgar
            </td>

        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {                
                <tr>
                    <td>
                        @item.Clave
                    </td>
					                    <td>
                        @item.Clave
                    </td>
                    <td>
                        @item.Carpeta_de_Investigacion
                    </td>
                    <td>
                        @item.Probable_Responsable
                    </td>
                    <td>
                        @item.Mano_Izquierda_4_Dedos
                    </td>
                    <td>
                        @item.Mano_Derecha_4_Dedos
                    </td>
                    <td>
                        @item.Pulgares
                    </td>
                    <td>
                        @item.Izquierda_Menique
                    </td>
                    <td>
