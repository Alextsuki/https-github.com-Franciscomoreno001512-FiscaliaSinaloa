            </td>
            <td class="column1">
                @Resources.Servicios_de_Apoyo_MPResources.Fecha_de_Registro
            </td>
            <td class="column1">
                @Resources.Servicios_de_Apoyo_MPResources.Hora_de_Registro
            </td>
            <td class="column1">
                @Resources.Servicios_de_Apoyo_MPResources.Usuario_que_Registra
            </td>
            <td class="column1">
                @Resources.Servicios_de_Apoyo_MPResources.Categoria
            </td>
            <td class="column1">
                @Resources.Servicios_de_Apoyo_MPResources.Tipo_de_Servicio
            </td>
            <td class="column1">
                @Resources.Servicios_de_Apoyo_MPResources.Solicitud
            </td>
            <td class="column1">
                @Resources.Servicios_de_Apoyo_MPResources.Fecha_de_Termino_para_Entrega
            </td>
            <td class="column1">
                @Resources.Servicios_de_Apoyo_MPResources.Hora_de_Termino_para_Entrega
            </td>
            <td class="column1">
                @Resources.Servicios_de_Apoyo_MPResources.Diligencia_a_Enviar
            </td>
            <td class="column1">
                @Resources.Servicios_de_Apoyo_MPResources.Archivo
            </td>
            <td class="column1">
                @Resources.Servicios_de_Apoyo_MPResources.Fecha_de_Atencion
            </td>
            <td class="column1">
                @Resources.Servicios_de_Apoyo_MPResources.Hora_de_Atencion
            </td>
            <td class="column1">
                @Resources.Servicios_de_Apoyo_MPResources.Usuario_que_Atiende
            </td>
            <td class="column1">
                @Resources.Servicios_de_Apoyo_MPResources.Archivo_Adjunto
            </td>

        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {                
                <tr>
                    <td>
                        @item.Clave
                    </td>
					                    <td>
                        @item.Clave
                    </td>
                    <td>
                        @item.Expediente_MP
                    </td>
                    <td>
                        @item.Fecha_de_Registro
                    </td>
                    <td>
                        @item.Hora_de_Registro
                    </td>
                    <td>
                        @item.Usuario_que_Registra
                    </td>
                    <td>
                        @item.CategoriaDescripcion
                    </td>
                    <td>
                        @item.Tipo_de_ServicioServicio
                    </td>
                    <td>
                        @item.Solicitud
                    </td>
                    <td>
                        @item.Fecha_de_Termino_para_Entrega
                    </td>
                    <td>
                        @item.Hora_de_Termino_para_Entrega
                    </td>
                    <td>
                        @item.Diligencia_a_Enviar
                    </td>
                    <td>
                        @item.Archivo
                    </td>
                    <td>
                        @item.Fecha_de_Atencion
                    </td>
                    <td>
                        @item.Hora_de_Atencion
                    </td>
                    <td>
                        @item.Usuario_que_Atiende
                    </td>
                    <td>
                        @item.Archivo_Adjunto
                    </td>

                </tr>
                rowCounter++;
            }
        }
    </tbody>
</table>
</body>

<script>
    function ocultarcolumnas() {        
        var arr = document.getElementById('columnsVisible').text.split(',');
        for (var i = 0; i < arr.length; i++) {
            if (arr[i] == "false") {
                show_hide_column(i-1, false);
            }
        }    
    };

    function show_hide_column(col_no, do_show) {
        var rows = document.getElementsByClassName('table')[0].rows;
        for (var row = 0; row < rows.length; row++) {
            var cols = rows[row].cells;
            if (col_no >= 0 && col_no < cols.length) {
                console.log(col_no);
                cols[col_no].style.display = do_show ? '' : 'none';
            }
        }
    }
</script>

