            <td class="column1">
                @Resources.Solicitud_de_NotificacionResources.Estatus
            </td>
            <td class="column1">
                @Resources.Solicitud_de_NotificacionResources.Fecha_de_Notificacion
            </td>
            <td class="column1">
                @Resources.Solicitud_de_NotificacionResources.Hora_de_Notificacion
            </td>
            <td class="column1">
                @Resources.Solicitud_de_NotificacionResources.Notificador
